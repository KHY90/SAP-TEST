{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "cds watch",
      "command": "cds",
      "args": [
        "watch"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "cds serve",
      "command": "cds",
      "args": [
        "serve",
        "--with-mocks",
        "--in-memory?"
      ],
      "problemMatcher": []
    },
    {
      "label": "cds-deploy-to-hana-DEMO-DEMO_HDI",
      "type": "shell",
      "command": "cds",
      "args": [
        "deploy",
        "--to",
        "hana:DEMO_HDI",
        "--no-save"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "isBackground": true,
      "problemMatcher": [
        "$cap-hdi-bind-handler"
      ]
    }
  ]
}